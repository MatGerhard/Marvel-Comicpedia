<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="matheus.luna.app.marvel">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MarvelApplication"
        android:allowBackup="true"
        android:icon="@drawable/marvel_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/marvel_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.MarvelAppStarter"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity
            android:name="matheus.luna.app.marvel.ui.activities.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="matheus.luna.app.marvel.ui.activities.MainActivity"
            android:exported="true">

        </activity>
    </application>

</manifest>